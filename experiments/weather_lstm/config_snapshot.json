{
  "run_name": "weather_lstm",
  "seed": 42,
  "data": {
    "train_csv": "data/weather/train.csv",
    "val_csv": "data/weather/val.csv",
    "test_csv": "data/weather/test.csv",
    "features": [
      "p (mbar)",
      "T (degC)",
      "VPmax (mbar)",
      "VPdef (mbar)",
      "sh (g/kg)",
      "rho (g/m**3)",
      "wv (m/s)"
    ],
    "target": "T (degC)",
    "seq_len": 120,
    "stride": 1
  },
  "model": {
    "name": "lstm",
    "output_dim": 1,
    "hidden_dim": 64,
    "num_layers": 2,
    "dropout": 0.1
  },
  "train": {
    "batch_size": 128,
    "epochs": 30,
    "patience": 5,
    "lr": 0.001,
    "weight_decay": 0.0001
  }
}